  <p>
    楼盘编号：<input type="text" name="estate_id" value="<%=@obj.estate_id%>"/>
    <%=if_has_error(@errors, :estate_id)%>
  </p>
  <p>
    客户编号：<input type="text" name="customer_id" value="<%=@obj.customer_id%>"/>
    <%=if_has_error(@errors, :customer_id)%>
  </p>
  <p>
    报备状态：
    <select name="bb_status">
        <%=status_options(@obj.bb_status, [
                {:k => Deal::BaobeiStatus::UNDO, :v => '界定中'},
                {:k => Deal::BaobeiStatus::SUCC, :v => '界定有效'},
                {:k => Deal::BaobeiStatus::FAIL, :v => '界定无效'},
        ])%>
    </select>
  </p>
  <p>
    报备时间：<input type="text" name="bb_at" value="<%=date(@obj.bb_at)%>"/>
  </p>
  <p>
    带看状态：
    <select name="daikan_status">
      <%=status_options(@obj.daikan_status, [
        {:k => Deal::DaikanStatus::UNDO, :v => '未带看'},
        {:k => Deal::DaikanStatus::CONFIRM, :v => '带看确认'},
        {:k => Deal::DaikanStatus::SUCC, :v => '带看确认完成'},
        {:k => Deal::DaikanStatus::APPLY, :v => '带看奖励申请'},
        {:k => Deal::DaikanStatus::APPLY_CONFIRM, :v => '带看奖励申请确认'},
      ])%>
    </select>
